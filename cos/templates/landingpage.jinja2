    <![endif]-->
    <script type="text/javascript" src="{{request.static_url('cos:static/modal.js')}}"></script>
  </head>

  <body>
    <h1>{{project}}</h1>
    <div class="starter-template">
      <div class="container">
        <div class="row">
          <div class="col-md-2">
            <img class="logo img-responsive" src="{{request.static_url('cos:static/pyramid.png')}}" alt="pyramid web framework">
          </div>
          <div class="col-md-10">
            {{ "Click link below to enter game" }}
                <p>Game is 3-4 Players</p>
              <li ><a href="/game">Start the Game</a></li >
          </div>
            <!-- Trigger/Open The Modal -->
            <button id="myBtn">Start New Game</button>
                <!-- The Modal -->
                <div id="myModal" class="modal">
                <!-- Modal content -->
                    <div class="modal-content">
                        <span class="close">&times;</span>
                        <p>Enter your name and age to start a game...</p>
                        <div class="col-md-10">
                            <form>First name:<br>
                                <input type="text" name="firstname"><br>
                                    Age:<br>
                                <input type="text" name="age">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <div class="row">
          <div class="links">
            <ul>
              <li><i class="glyphicon glyphicon-cog icon-muted"></i><a href="https://github.com/nadcock/CSC478-SOC-Game">Github Project</a></li>
            </ul>
          </div>
        </div>
        <div class="row">
          <div class="copyright">
            UIS CSC 478 Class Project
          </div>
        </div>
      </div>
    </div>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
